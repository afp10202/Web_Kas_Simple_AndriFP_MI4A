<!DOCTYPE html>
<html>
<head>
  <title>Kas Masuk Kas Keluar - Laporan</title>
  <link rel="stylesheet" href="/assets/css/bootstrap.css">
</head>
<body>
  <div class="container">
  
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/">Dashboard</a>
            <a class="nav-link" href="/daftar-akun">Daftar Akun</a>
            <a class="nav-link" href="/kas-masuk">Kas Masuk</a>
            <a class="nav-link" href="/kas-keluar">Kas Keluar</a>
            <a class="nav-link" href="/laporan">Laporan</a>
            <a class="nav-link" href="/akun">Akun</a>
          </div>
        </div>
      </div>
    </nav>

    <div class="col-md-12">
      <!-- Content -->
      <br/>
      <h1>Laporan</h1>
      <br/>

      <!-- Form Filter Laporan -->
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Filter Laporan</h5>
          <form>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="filter-tipe">Tipe Laporan</label>
                  <select class="form-control" id="filter-tipe">
                    <option value="harian">Laporan Harian</option>
                    <option value="bulanan">Laporan Bulanan</option>
                    <option value="tahunan">Laporan Tahunan</option>
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="filter-tanggal">Tanggal</label>
                  <input type="date" class="form-control" id="filter-tanggal">
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="filter-bulan">Bulan</label>
                  <input type="month" class="form-control" id="filter-bulan">
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="filter-tahun">Tahun</label>
                  <input type="number" class="form-control" id="filter-tahun">
                </div>
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Filter</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Tabel Laporan -->
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Tabel Laporan</h5>
          <table class="table">
            <thead>
              <tr>
                <th>No</th>
                <th>Tanggal</th>
                <th>No Bukti</th>
                <th>Tujuan</th>
                <th>No Akun</th>
                <th>Jumlah</th>
              </tr>
            </thead>
            <tbody>
              {{#each results}}
              <tr>
                <td>{{inc @index}}</td>
                <td>{{formatDate tgl}}</td>
                <td>{{no_bukti}}</td>
                <td>{{tujuan}}</td>
                <td>{{no_akun}}</td>
                <td>{{formatRupiah jumlah}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <div class="text-right">
            <button class="btn btn-primary" id="print-laporan">Print</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/assets/js/jquery-3.6.4.js"></script>
  <script src="/assets/js/bootstrap.js"></script>

  <script>
    // Tombol Print
    document.getElementById('print-laporan').addEventListener('click', function () {
      var printContents = document.getElementById('print-laporan').closest('.card').innerHTML;
      var originalContents = document.body.innerHTML;
      document.body.innerHTML = printContents;
      window.print();
      document.body.innerHTML = originalContents;
    });
  </script>
</body>
</html>
